<%- include('../html-header.ejs') %>

                      <div class="f-fallback">
                        <h1>Hi, <%= name %>!</h1>
                        <p>Your job for <%= customer_name %> has been scheduled as a Zoom meeting:</p>
                        <!-- Action -->
                        <table class="body-action" align="center" width="100%" cellpadding="0" cellspacing="0" role="presentation">
                          <tr>
                            <td align="center">                              
                              <table width="100%" border="0" cellspacing="0" cellpadding="0" role="presentation">
                                <tr>
                                  <td align="center">
                                    <a href="<%= action_url %>" class="f-fallback button" target="_blank">Start Meeting</a>
                                  </td>
                                </tr>
                              </table>
                            </td> 
                          </tr>
                        </table>
                        
                        <table class="attributes" width="100%" cellpadding="0" cellspacing="0" role="presentation">
                            <tr>
                              <td class="attributes_content">
                                <table width="100%" cellpadding="0" cellspacing="0" role="presentation">
                                  <tr>
                                    <td class="attributes_item">
                                      <span class="f-fallback">
                                        <strong>Topic:</strong> <%= topic %> 
                                      </span>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td class="attributes_item">
                                      <span class="f-fallback">
                                        <strong>Time:</strong> <%= job_date_time %> 
                                      </span>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td class="attributes_item">
                                      <span class="f-fallback">
                                        <strong>Duration:</strong> <%= duration %> 
                                      </span>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td class="attributes_item">
                                      <span class="f-fallback">
                                        <strong>Customer:</strong> <%= customer_name %> 
                                      </span>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td class="attributes_item">
                                      <span class="f-fallback">
                                        <strong>Hourly Rate:</strong> <%= rate %> 
                                      </span>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td class="attributes_item">
                                      <span class="f-fallback">
                                        <strong>Meeting ID:</strong> <%= meeting_id %> 
                                      </span>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td class="attributes_item">
                                      <span class="f-fallback">
                                        <strong>Password:</strong> <%= meeting_password %> 
                                      </span>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td class="attributes_item">
                                      <span class="f-fallback">
                                        <strong>Notes:</strong> <%= notes %> 
                                      </span>
                                    </td>
                                  </tr>
                                  <tr>
                                    <td class="attributes_item">
                                      <span class="f-fallback">
                                          <strong>Join URL:</strong> <%= join_url %> 
                                        </span>
                                    </td>
                                  </tr>
                                </table>
                              </td>
                            </tr>
                          </table>
                        
                          <table class="" role="presentation">
                            <tr>
                              <td>
                                  <p class="f-fallback sub align-center"><a href="<%= google_url %>">Google Calendar</a></p>
                              </td>
                              <td>
                                  <p class="f-fallback sub align-center"><a href="<%= ics_url %>">Apple Calendar</a></p>
                              </td>
                              <td>
                                  <p class="f-fallback sub align-center"><a href="<%= outlook_url %>">Microsoft Outlook</a></p>
                              </td>
                              <td>
                                  <p class="f-fallback sub align-center"><a href="<%= yahoo_url %>">Yahoo! Calendar</a></p>
                              </td>
                              <td>
                                  <p class="f-fallback sub align-center"><a href="<%= ics_url %>">Download Invite (.ics)</a></p>
                              </td>
                            </tr>
                          </table>
    
                        <p>Your customer has been notified and must authorize the charge before this meeting will be confirmed and can start.</p>
                        <p><a href="<%= job_url %>">Need to change or cancel this meeting?</a></p>
                        <p>If you have any questions, please <a href="mailto:<%= support_email %>">email our customer success team</a>.</p>
                        <p>Thanks,
                          <br>The <%= product_name %> Team</p>
                        
                        <!-- Sub copy -->
                        <table class="body-sub" role="presentation">
                          <tr>
                            <td>
                              <p class="f-fallback sub">If youâ€™re having trouble with the button above, copy and paste the URL below into your web browser.</p>
                              <p class="f-fallback sub"><%= action_url %></p>
                            </td>
                          </tr>
                        </table>
                      </div>

<%- include('../html-footer.ejs') %>